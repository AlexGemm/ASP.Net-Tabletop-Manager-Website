@model DnDWebsite.Models.Item

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete an Item</h1>
<a asp-action="Index" class="btn btn-danger mb-3">Back to List</a>

<h4>Are you sure you want to delete this?</h4>
<div class="w-50 float-left">
    <div class="container border border-white rounded p-3 mb-3">
        <div class="row">
            <div class="col">
                <h5 class="mb-3">@Html.DisplayFor(model => model.Name)</h5>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <b>Description:</b> @Html.DisplayFor(model => model.Description)
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col">
                <b>Charges:</b> @Html.DisplayFor(model => model.Charges)
            </div>
        </div>
        <div class="row">
            <div class="col">
                <b>Power:</b><br />
                @Html.DisplayFor(model => model.Power)
            </div>
        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>